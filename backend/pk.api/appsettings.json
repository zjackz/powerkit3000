{
  "ConnectionStrings": {
    "AppDb": "Host=localhost;Port=5432;Database=postgres;Username=postgres;Password=123321"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://172.31.69.200:5200"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://127.0.0.1:3000",
      "http://172.31.69.200:3000",
      "http://localhost:5173",
      "http://127.0.0.1:5173"
    ]
  },
  "Amazon": {
    "MinDelayMilliseconds": 1200,
    "MaxDelayMilliseconds": 2800,
    "UserAgentPool": [
      "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/115.0.0.0 Safari/537.36",
      "Mozilla/5.0 (Macintosh; Intel Mac OS X 13_4) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/16.5 Safari/605.1.15",
      "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/115.0.0.0 Safari/537.36"
    ],
    "Categories": [
      { "Name": "Electronics", "AmazonCategoryId": "172282" },
      { "Name": "Home & Kitchen", "AmazonCategoryId": "1055398" },
      { "Name": "Toys & Games", "AmazonCategoryId": "165793011" }
    ],
    "EnableScheduling": true,
    "Jobs": [
      {
        "AmazonCategoryId": "172282",
        "BestsellerType": "BestSellers",
        "Cron": "0 0 2 * * *",
        "TimeZone": "UTC"
      },
      {
        "AmazonCategoryId": "1055398",
        "BestsellerType": "NewReleases",
